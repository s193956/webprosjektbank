@model IEnumerable<WebprosjektBankOblig.Models.Konto>

@{
    ViewBag.Title = "Kontoer";
}
<div class="container">
    
    <h2>Kontoer</h2>

    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.kontonr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.saldo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="kontotype">
                    @Html.DisplayFor(modelItem => item.kontotype)
                </td>
                <td class="kontonr">
                    @Html.DisplayFor(modelItem => item.kontonr)
                </td>
                <td class="saldo">
                    @Html.DisplayFor(modelItem => item.saldo)
                </td>
                <td>
                    <a class="SlettBtn btn btn-danger" data-id="@item.Id" href="#">Slett</a>
                </td>
            </tr>
        }

    </table>
</div>

